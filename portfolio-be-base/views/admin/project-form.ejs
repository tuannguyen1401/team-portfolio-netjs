<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <script src="https://cdn.ckeditor.com/ckeditor5/40.0.0/classic/ckeditor.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/admin">Admin Panel</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/admin">Dashboard</a>
                <a class="nav-link" href="/admin/projects">Projects</a>
                <a class="nav-link" href="/admin/configs">Configs</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1><%= title %></h1>
        
        <div class="card">
            <div class="card-body">
                <form method="POST" action="<%= project ? '/admin/projects/' + project.id + '/update' : '/admin/projects' %>" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title *</label>
                        <input type="text" class="form-control" id="title" name="title" value="<%= project ? project.title : '' %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="short_description" class="form-label">Short Description</label>
                        <textarea class="form-control" id="short_description" name="short_description" rows="3"><%= project ? project.short_description : '' %></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="image" class="form-label">Project Image</label>
                        <input type="file" class="form-control" id="image" name="image" accept="image/*" onchange="previewImage(this)">
                        
                        <!-- Preview container for new image -->
                        <div id="new-image-preview" class="mt-2" style="display: none;">
                            <img id="preview-img" src="" alt="Preview" style="max-width: 200px; max-height: 200px;" class="img-thumbnail">
                            <p class="text-muted mt-1">New image preview</p>
                            <button type="button" class="btn btn-sm btn-outline-danger mt-1" onclick="clearImagePreview()">
                                <i class="bi bi-x-circle"></i> Remove selected image
                            </button>
                        </div>
                        
                        <!-- Current image display -->
                        <% if (project && project.image_url) { %>
                            <div id="current-image" class="mt-2">
                                <img src="<%= project.image_url %>" alt="Current image" style="max-width: 200px; max-height: 200px;" class="img-thumbnail">
                                <p class="text-muted mt-1">Current image</p>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="5"><%= project ? project.description : '' %></textarea>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="is_feautured" name="is_feautured" <%= project && project.is_feautured ? 'checked' : '' %>>
                        <label class="form-check-label" for="is_feautured">
                            Featured Project
                        </label>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <%= project ? 'Update' : 'Create' %> Project
                        </button>
                        <a href="/admin/projects" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Function to preview selected image
        function previewImage(input) {
            const previewContainer = document.getElementById('new-image-preview');
            const previewImg = document.getElementById('preview-img');
            const currentImage = document.getElementById('current-image');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    previewContainer.style.display = 'block';
                    
                    // Hide current image when new image is selected
                    if (currentImage) {
                        currentImage.style.display = 'none';
                    }
                };
                
                reader.readAsDataURL(input.files[0]);
            } else {
                // If no file selected, hide preview and show current image
                previewContainer.style.display = 'none';
                if (currentImage) {
                    currentImage.style.display = 'block';
                }
            }
        }
        
        // Function to clear image preview
        function clearImagePreview() {
            const previewContainer = document.getElementById('new-image-preview');
            const currentImage = document.getElementById('current-image');
            const fileInput = document.getElementById('image');
            
            // Clear file input
            fileInput.value = '';
            
            // Hide preview
            previewContainer.style.display = 'none';
            
            // Show current image if exists
            if (currentImage) {
                currentImage.style.display = 'block';
            }
        }
        
        // Initialize CKEditor for description
        ClassicEditor
            .create(document.querySelector('#description'), {
                toolbar: {
                    items: [
                        'heading',
                        '|',
                        'bold',
                        'italic',
                        'link',
                        'bulletedList',
                        'numberedList',
                        '|',
                        'outdent',
                        'indent',
                        '|',
                        'blockQuote',
                        'insertTable',
                        'undo',
                        'redo'
                    ]
                },
                language: 'en',
                table: {
                    contentToolbar: [
                        'tableColumn',
                        'tableRow',
                        'mergeTableCells'
                    ]
                }
            })
            .then(editor => {
                console.log('CKEditor for description initialized');
            })
            .catch(error => {
                console.error(error);
            });

        // Initialize CKEditor for short description
        ClassicEditor
            .create(document.querySelector('#short_description'), {
                toolbar: {
                    items: [
                        'bold',
                        'italic',
                        'link',
                        'bulletedList',
                        'numberedList',
                        '|',
                        'undo',
                        'redo'
                    ]
                },
                language: 'en'
            })
            .then(editor => {
                console.log('CKEditor for short description initialized');
            })
            .catch(error => {
                console.error(error);
            });
    </script>
</body>
</html>
