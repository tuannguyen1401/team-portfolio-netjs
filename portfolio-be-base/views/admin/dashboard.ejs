<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/admin">Admin Panel</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/admin">Dashboard</a>
                <a class="nav-link" href="/admin/projects">Projects</a>
                <a class="nav-link" href="/admin/configs">Configs</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1><%= title %></h1>
        
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>Projects (<%= projects.length %>)</h5>
                    </div>
                    <div class="card-body">
                        <a href="/admin/projects" class="btn btn-primary">Manage Projects</a>
                        <a href="/admin/projects/new" class="btn btn-success">New Project</a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>Configs (<%= configs.length %>)</h5>
                    </div>
                    <div class="card-body">
                        <a href="/admin/configs" class="btn btn-primary">Manage Configs</a>
                        <a href="/admin/configs/new" class="btn btn-success">New Config</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <h3>Recent Projects</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Featured</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% projects.slice(0, 5).forEach(project => { %>
                        <tr>
                            <td><%= project.id %></td>
                            <td>
                                <% if (project.image_url) { %>
                                    <img src="<%= project.image_url %>" alt="Project image" style="width: 40px; height: 40px; object-fit: cover;" class="img-thumbnail">
                                <% } else { %>
                                    <span class="text-muted">No image</span>
                                <% } %>
                            </td>
                            <td><%= project.title %></td>
                            <td>
                                <% if (project.is_feautured) { %>
                                    <span class="badge bg-success">Yes</span>
                                <% } else { %>
                                    <span class="badge bg-secondary">No</span>
                                <% } %>
                            </td>
                            <td>
                                <a href="/admin/projects/<%= project.id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
