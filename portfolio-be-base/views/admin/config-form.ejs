<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/admin">Admin Panel</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/admin">Dashboard</a>
                <a class="nav-link" href="/admin/projects">Projects</a>
                <a class="nav-link" href="/admin/configs">Configs</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <h1><%= title %></h1>
        
        <div class="card">
            <div class="card-body">
                <form method="POST" enctype="multipart/form-data" action="<%= config ? '/admin/configs/' + config.id + '/update' : '/admin/configs' %>">
                    <div class="mb-3">
                        <label for="config_name" class="form-label">Config Name *</label>
                        <input type="text" class="form-control" id="config_name" name="config_name" value="<%= config ? config.config_name : '' %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="value" class="form-label">Value *</label>
                        <% if (config && config.value_type === 'image') { %>
                            <input type="file" class="form-control file-input" id="value" name="value" value="" required>
                            <img id="preview-img" src="<%= config.value %>" alt="Preview" style="max-width: 200px; max-height: 200px;" class="img-thumbnail">
                        <% } else { %>
                            <textarea class="form-control" id="value" name="value" rows="3" required><%= config ? config.value : '' %></textarea>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="value_type" class="form-label">Value Type *</label>
                        <select class="form-control" id="value_type" name="value_type" required>
                            <option value="text" default <%= config && config.value_type === 'text' ? 'selected' : '' %>>Text</option>
                            <option value="image" <%= config && config.value_type === 'image' ? 'selected' : '' %>>Image</option>
                        </select>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <%= config ? 'Update' : 'Create' %> Config
                        </button>
                        <a href="/admin/configs" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('value_type').addEventListener('change', function(e) {
            var valueType = e.target.value;
            var valueDiv = document.getElementById('value').parentElement;
            if (valueType === 'image') {
                // Nếu là image, thay textarea bằng input file
                valueDiv.innerHTML = `
                    <label for="value" class="form-label">Value *</label>
                    <input type="file" class="form-control file-input" id="value" name="value" required>
                    <img id="preview-img" onchange="bindFileInputPreview()" src="" alt="Preview" style="max-width: 200px; max-height: 200px;" class="img-thumbnail">
                `;
            } else {
                // Nếu là text, thay input file bằng textarea
                valueDiv.innerHTML = `
                    <label for="value" class="form-label">Value *</label>
                    <textarea class="form-control" id="value" name="value" rows="3" required></textarea>
                `;
            }
        });

        function bindFileInputPreview() {
            var fileInput = document.getElementById('value');
            var previewImg = document.getElementById('preview-img');
            if (fileInput && fileInput.type === 'file' && previewImg) {
                var file = fileInput.files[0];
                if (file) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        previewImg.src = e.target.result;
                    };
                    reader.readAsDataURL(file);
                } else {
                    previewImg.src = '';
                }
            }
        }

        // Initial bind if file input exists
        bindFileInputPreview();

        // Bắt sự kiện cho element img tự generate ra (ví dụ: #preview-img)
        document.addEventListener('change', function(e) {
            if (e.target && e.target.matches('input[type="file"]#value')) {
                bindFileInputPreview();
            }
        });
    </script>
</body>
</html>
