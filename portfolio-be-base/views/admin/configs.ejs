<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/admin">Admin Panel</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/admin">Dashboard</a>
                <a class="nav-link" href="/admin/projects">Projects</a>
                <a class="nav-link active" href="/admin/configs">Configs</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><%= title %></h1>
            <a href="/admin/configs/new" class="btn btn-success">New Config</a>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Config Name</th>
                            <th>Value</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% configs.forEach(config => { %>
                        <tr>
                            <td><%= config.id %></td>
                            <td><%= config.config_name %></td>
                            <td><%= config.value %></td>
                            <td>
                                <a href="/admin/configs/<%= config.id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                <form method="POST" action="/admin/configs/<%= config.id %>/delete" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
